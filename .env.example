# Dzisiejsze Smaki Lod√≥w - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Security Settings
# =============================================================================

# Django secret key - used for cryptographic signing
# Generate a new one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-production-secret-key-here-change-this-in-production

# Comma-separated list of allowed hosts
# Examples:
#   Local development: localhost,127.0.0.1
#   Production: smaki-lodow.pl,www.smaki-lodow.pl,smaki-lodow.example.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Optional: Debug and Logging
# =============================================================================

# Debug mode - NEVER set to True in production
# Default: False
DJANGO_DEBUG=False

# Log level for Django (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Default: INFO
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# Optional: HTTPS Security
# =============================================================================

# Enable HTTPS security settings (SSL redirect, secure cookies, HSTS)
# Set to false only if you cannot use HTTPS (not recommended for production)
# Default: true
DJANGO_USE_HTTPS=true

# =============================================================================
# Optional: Database
# =============================================================================

# SQLite is used by default with WAL mode for better concurrency
# To use PostgreSQL instead, set:
# DATABASE_URL=postgres://user:password@localhost:5432/smaki_lodow

# =============================================================================
# Production Deployment Checklist
# =============================================================================
#
# Before deploying to production:
#
# 1. Generate a secure SECRET_KEY:
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
#
# 2. Set DJANGO_ALLOWED_HOSTS to your actual domain(s)
#
# 3. Set DJANGO_DEBUG=False (or leave unset)
#
# 4. Ensure HTTPS is available and set DJANGO_USE_HTTPS=true
#
# 5. Run collectstatic:
#    python manage.py collectstatic
#
# 6. Run deployment checks:
#    DJANGO_SETTINGS_MODULE=config.settings_production python manage.py check --deploy
#
# 7. Set up regular database backups (even though we use SQLite)
#
# =============================================================================
